<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <LinearLayout
        android:id="@+id/fullscreen_content_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <Button
            android:id="@+id/addBroButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF0000"
            android:fontFamily="sans-serif-condensed"
            android:onClick="addBro"
            android:text="Ajouter un BRO"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            app:backgroundTint="#FF0000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainBro"
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:orientation="vertical">


        <Space
            android:layout_width="match_parent"
            android:layout_height="306dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="Votre nom de BRO :"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/broName"
            android:layout_width="match_parent"
            android:layout_height="325dp"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="333dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/callBros"
            android:layout_width="wrap_content"
            android:layout_height="475dp"
            android:layout_weight="1"
            android:contentDescription="BRO Signal"
            android:onClick="launchBroSignal"
            app:srcCompat="@drawable/brosignal" />

        <LinearLayout
            android:id="@+id/broList"
            android:layout_width="match_parent"
            android:layout_height="638dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" />

    </LinearLayout>

</FrameLayout>